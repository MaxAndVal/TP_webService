<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#70B347</item>
        <item name="colorPrimaryDark">#0A9043</item>
        <item name="colorAccent">#D2E054</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="TextViewStyle">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/rick_and_morty_by_shi</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">17sp</item>

    </style>

    <style name="TitleStyle">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/rick_and_morty_by_shi</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TitleDetailStyle">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/rick_and_morty_by_shi</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="TextCardNumberStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/rick_and_morty_by_shi</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/ellipse_card_number</item>
    </style>

    <style name="TextDetailCardNumberStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/rick_and_morty_by_shi</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">30sp</item>
        <item name="android:background">@drawable/ellipse_card_number</item>
    </style>

    <style name="etStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@color/etHints</item>
        <item name="colorControlNormal">@color/etHints</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="noAccountStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/get_schwifty</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="alreadyAccountStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/get_schwifty</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="tvWallet">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:drawableTop">@drawable/pickle_rick_coin</item>
        <item name="android:textStyle">italic</item>
        <item name="android:fontFamily">@font/rick_and_morty_by_shi</item>
    </style>
</resources>
