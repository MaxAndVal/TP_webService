<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#4CAF50</item>
        <item name="colorPrimaryDark">#FA000000</item>
        <item name="colorAccent">#f0e14a</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="TextViewStyleBlack">
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/rick_and_morty_by_shi</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="TextViewStyleWhite">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/rick_and_morty_by_shi</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="TitleStyle">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/rick_and_morty_by_shi</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TitleDetailStyle">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/rick_and_morty_by_shi</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="TitleShopStyle">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/rick_and_morty_by_shi</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="TextCardNumberStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/rick_and_morty_by_shi</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/ellipse_card_number</item>
    </style>

    <style name="TextDetailCardNumberStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/rick_and_morty_by_shi</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">30sp</item>
        <item name="android:background">@drawable/ellipse_card_number</item>
    </style>

    <style name="etStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@color/etHints</item>
        <item name="colorControlNormal">@color/etHints</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="noAccountStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/get_schwifty</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="tvWalletBlack">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:drawableTop">@drawable/pickle_rick_coin</item>
        <item name="android:textStyle">italic</item>
        <item name="android:fontFamily">@font/rick_and_morty_by_shi</item>
    </style>

    <style name="tvWalletWhite">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:drawableTop">@drawable/pickle_rick_coin</item>
        <item name="android:textStyle">italic</item>
        <item name="android:fontFamily">@font/rick_and_morty_by_shi</item>
    </style>

    <style name="tvDeck">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:drawableTop">@drawable/deck</item>
        <item name="android:textStyle">italic</item>
        <item name="android:fontFamily">@font/rick_and_morty_by_shi</item>
    </style>

    <style name="btn_style">
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>
    </style>

    <style name="shop_card_style">
        <item name="android:src">@drawable/vortex_ram</item>
        <item name="android:background">@drawable/card_back</item>
        <item name="android:layout_height">200dp</item>
    </style>

    <style name="tv_FAQ_question">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/rick_and_morty_by_shi</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/border_tv</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tv_response_style">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="customStyleInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

    </style>

    <style name="quote_style">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/arima_madurai_regular</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="tv_game_over">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/rick_and_morty_by_shi</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="cl_codeSent">
        <item name="android:background">@drawable/back_game_over</item>
    </style>

    <style name="BigTextViewStyleWhite">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/rick_and_morty_by_shi</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="BigTextViewStyleWhiteSwifty">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/get_schwifty</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="errorInputDarkRed">
        <item name="android:textColor">@android:color/holo_red_dark</item>
    </style>
    <style name="errorInputLightRed">
        <item name="android:textColor">@android:color/holo_red_light</item>
    </style>

</resources>
