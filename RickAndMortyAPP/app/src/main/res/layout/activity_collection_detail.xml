<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/card_detail_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:background="@drawable/card_back"
        android:visibility="invisible"
        tools:context=".View.Collection.detail.CollectionDetailActivity"
        tools:visibility="visible">

        <TextView
            android:id="@+id/tv_detail_card_name"
            style="@style/TitleDetailStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toStartOf="@id/tv_detail_card_number"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="yolo" />

        <TextView
            android:id="@+id/tv_detail_card_number"
            style="@style/TextDetailCardNumberStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_detail_card_name"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="23" />

        <ImageView
            android:id="@+id/iv_detail_card_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/browser_actions_context_menu_max_width"
            android:layout_margin="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_detail_description"
            style="@style/TitleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="Lorem ipsum s jksqckqjscsqckjsqncjsqncksndcqjksnckjsdndsncqkscndvsdvcsdsdwcs" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
